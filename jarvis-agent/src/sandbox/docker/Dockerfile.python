# Dockerfile.python
# Imagen base para ejecutar código Python en sandbox

FROM python:3.11-slim

# Instalamos algunas librerías comunes que suelen necesitarse
# (puedes añadir más según necesites)
RUN pip install --no-cache-dir \
    numpy \
    pandas \
    requests \
    matplotlib \
    pillow

# Directorio de trabajo donde se montará el workspace
WORKDIR /workspace

# Usuario no-root para seguridad
RUN useradd -m -u 1000 jarvis && \
    chown -R jarvis:jarvis /workspace

USER jarvis

# Por defecto ejecuta python (se le pasa el script como argumento)
ENTRYPOINT ["python"]